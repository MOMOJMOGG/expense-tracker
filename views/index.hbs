<div class="container mt-5 select-bar">
  <form action="/" method="POST" class="form-group col-8 mx-auto">
    <select name="sort" class="form-control btn-outline-secondary" id='sortType' onchange="this.form.submit()"
      style="cursor: pointer;">
      <option class="placeholder" disabled selected value="">類別</option>
      {{#each categories }}
      <option value="{{@index}}">{{this.category}}</option>
      {{/each}}
    </select>
  </form>
</div>

<div class="container mt-5 mx-auto d-flex justify-content-around">
  <div class="col-3 d-inline text-center">
    <h2>總金額</h2>
  </div>
  <div class="col-5 total-amount d-inline text-center">25260</div>
</div>

<div class="container mt-5 mx-auto d-flex justify-content-between">
  <div class="list-group col-8 mx-auto">
    {{#each record}}

    <a class="reset-link" data-toggle="collapse" href="#collapse{{this._id}}" aria-expanded="false"
      aria-controls="collapseDetails">
      <div class="list-group-item d-flex justify-content-between w-100">
        <div class="media">
          <span class="my-auto mr-3" style="vertical-align: middle;">{{{mapIcon ../categories this.category}}}</span>
          <div class="media-body">
            <h3>{{this.name}}</h3>
            <small>{{formDate this.date}}</small>
          </div>
        </div>
        <div class="d-inline my-auto text-center">
          <h2 class="amount">{{this.amount}}</h2>
        </div>
      </div>
    </a>

    <div class="collapse" id="collapse{{this._id}}">
      <div class="card">
        <div class="card-header">
          {{this.type}}明細
        </div>

        <div class="card-body">
          <h3 class="card-title my-auto text-bold">{{this.name}}</h3>
        </div>
        <ul class="list-group list-group-flush">

          <li class="list-group-item">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">分類 : </span>
              </div>
              <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"
                value="{{this.category}}" readonly>
            </div>
          </li>

          <li class="list-group-item">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">子分類 : </span>
              </div>
              <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"
                value="{{this.subcategory}}" readonly>
            </div>
          </li>

          <li class="list-group-item">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">日期 : </span>
              </div>
              <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"
                value="{{formDate this.date}}" readonly>
            </div>
          </li>

          <li class="list-group-item">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">地點 : </span>
              </div>
              <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"
                value="{{this.location}}" readonly>
            </div>
          </li>

          <li class="list-group-item">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">花費 : $</span>
              </div>
              <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"
                value="{{this.amount}}" readonly>
            </div>
          </li>

          <li class="list-group-item">
            <div class="input-group">
              <div class="input-group-prepend">
                <span class="input-group-text">發票 : </span>
              </div>
              <input type="text" class="form-control" aria-label="Amount (to the nearest dollar)"
                value="{{this.receipt}}" readonly>
            </div>
          </li>
        </ul>

        <div class="card-body d-flex justify-content-end">
          <a class="btn btn-success mr-3" href="/expense/{{ this._id }}/edit">edit</a>
          <form action="/expense/{{ this._id }}?_method=DELETE" method="POST" style="display: inline">
            <button class="btn btn-danger" type="submit">delete</button>
          </form>
        </div>
      </div>
    </div>
    {{/each}}
  </div>
</div>